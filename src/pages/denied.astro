---
import Layout from "@layouts/Layout.astro"
import Button from "@components/Button.astro"
---

<Layout title="Access Denied">
    <div class="content">
        <h1>Access Denied</h1>
        <p>You must be logged in to view this page.</p>
        <div class="buttons">
            <Button link="/login" type="primary" name="Login" />
            <Button link="/" type="secondary" name="Go Home" />
        </div>
    </div>
</Layout>

<style>
    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .content h1 {
        font-size: 4rem;
    }

    .content p {
        font-size: 1.5rem;
    }

    .buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }
</style>