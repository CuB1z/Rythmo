---
import Layout from "@layouts/Layout.astro"
import Rythmo from "@components/Rythmo.astro"
import Button from "@components/Button.astro"
import { APP_DATA } from "@utils/constants"
---

<Layout title={APP_DATA.name}>
	<Rythmo text="Welcome to" />
	<div style="text-align: center; display: flex; flex-direction: column; align-items: center; gap: 2rem;">
		<h1>Currently in development</h1>
		<p style="font-size: 20px;">{APP_DATA.description}</p>
		<Button link="/main" type="primary" name="Preview Main Page" />
		<Button link="/subjects" type="secondary" name="Preview Subjects Page" />
	</div>
</Layout>
