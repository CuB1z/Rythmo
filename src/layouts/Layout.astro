---
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body>
        <Navbar />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

    :root {
        /* Colors */
        --bg-color: #f7f7f7;
        --text-color: #333;
        --accent-color: #e50a77;
        --accent-color-hover: #ff69b4;
        --accent-color-light: #ff69b40f;
        --bg-image: url('/bg.png');
        --bg-overlay-color: #eee;

        /* Sizes */
        --navbar-height: 60px;
        --footer-height: 100px;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        line-height: 1.6;

        letter-spacing: 1px;
        scroll-behavior: smooth;
        scrollbar-width: thin;
        scrollbar-color: #333 #121212;
    }

    body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: var(--bg-color);
        color: var(--text-color);
        font-size: 100%;
        font-family: "Poppins", sans-serif;
        background-image: var(--bg-image), linear-gradient(var(--bg-overlay-color), var(--bg-overlay-color));
        background-repeat: repeat;
    }

    main {
        width: 100%;
        max-width: 1300px;
        min-height: 100vh;
        padding-top: calc(var(--navbar-height) + 20px);
        display: flex;
        flex-direction: column;
        gap: 3.5rem;
        justify-content: center;
        align-items: center;
    }

    img {
        max-width: 100%;
    }

    li {
        list-style: none;
    }

    a {
        color: #333;
        text-decoration: none;
    }

    p {
        font-weight: 200;
    }

    form {
        width: 450px;
        max-width: 100%;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 10px;
        border-radius: 12px;
        background-color: #fff;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
        color: #666;
    }

    input {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-sizing: border-box;
        font-size: 1rem;
    }

    hr{
        border: 0;
        height: 1px;
        background: #eee;
        margin-bottom: 1rem;
    }
</style>
