---
import AppleLogo from "@components/icons/Apple.astro";
import GoogleLogo from "@components/icons/Google.astro";
import GitHubLogo from "@components/icons/Github.astro";
import FormGroup from "@components/forms/FormGroup.astro";
import SocialButton from "@components/forms/SocialButton.astro";
import RelatedLink from "@components/forms/RelatedLink.astro";
import Button from "@components/Button.astro";
---
<div class="form-container">
    <form>
        <FormGroup
            label="Email"
            type="email"
            id="email"
            placeholder="Type your email"
        />
        <FormGroup
            label="Password"
            type="password"
            id="password"
            placeholder="Type your password"
        />
        <Button type="special" name="Log in" buttonType="submit" />
        <RelatedLink
            text1="Don't have an account?"
            link="/register"
            text2="Register"
        />
        <hr />
        <div class="social-buttons">
            <SocialButton>
                <GoogleLogo />
            </SocialButton>
            <SocialButton>
                <AppleLogo />
            </SocialButton>
            <SocialButton>
                <GitHubLogo />
            </SocialButton>
        </div>
    </form>
    <button id="google">Login with Google</button>
</div>

<script>
    const $googleButton = document.getElementById("google");

    $googleButton.addEventListener("click", async () => {
        const response = await fetch("http://localhost:4321/api/login")
        const data = await response.json()
        console.log(data)

        if (response.ok) {
            window.location.replace(data.url)
        }
    })
</script>

<style>

    .form-container {
        width: 100%;
        max-width: 490px;
        margin: 0 auto;
        padding: 1rem;
    }

    .social-buttons {
        display: flex;
        justify-content: center;
        gap: 2rem;
    }

    .login-button {
        width: 100%;
        padding: 0.75rem;
        border: none;
        border-radius: 8px;
        background: linear-gradient(270deg, #ff00ff, #ff69b4, #ff1493, #ff00ff);
        background-size: 400% 400%;
        color: white;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;

        &:hover {
            animation: pinkGradient 3s ease infinite;
        }
    }

    @keyframes pinkGradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .login-button:hover {
        background-color: #e64a19;
    }
</style>

<script>
    const $form = document.querySelector("form");

    $form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Retrieve form data
        const formData = new FormData($form);
        const values = Object.fromEntries(formData);

        // Send data to the server
        const response = await fetch("/api/login", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(values),
        });

        if (response.ok) {
            window.location.href = "/main";
        } else {
            console.error("Failed to login");
        }
    });
</script>
