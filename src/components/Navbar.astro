---
import { AVAILABLE_ROUTES } from "@utils/constants";
const routes = [
    AVAILABLE_ROUTES.home,
    AVAILABLE_ROUTES.subjects,
    AVAILABLE_ROUTES.profile
];

const activeRoute = Astro.url.pathname
---

<nav>
    <ul>
        {
            routes.map((route) => (
                <li>
                    <a href={route.path} class={`${activeRoute === route.path ? 'active' : ''}`}>
                        {route.name}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>

<style>
    nav {
        width: 100%;
        height: 75px;
        position: fixed;
        top: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #333;
        background-color: #fff;
    }
    
    ul {
        display: flex;
        list-style-type: none;
    }
    
    li {
        margin: 0 1rem;
    }
    
    a {
        color: inherit;
        text-decoration: none;
        font-size: 20px;
        font-weight: 500;
        padding: 5px 15px;
        border-radius: 25px;

        &.active {
            background: linear-gradient(90deg, #e74694, #f961e0 100%);
            color: #fff;
        }

        img {
            width: 30px;
            height: 30px;
        }
    }

</style>