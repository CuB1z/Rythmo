---
const { name , link } = Astro.props
---

<button class="btn">
    <a href={link}>{name}</a>

    <style>
        .btn {
            padding: 1rem 2rem;
            background-color: #333;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #121212;
        }