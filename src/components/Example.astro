---
interface Props{
    title: string;
    description: string;
    img: string;
}

const { title, description, img } = Astro.props

---
<div style="text-align: center; display: flex; flex-direction: column; align-items: center; gap: 2rem;">
    <div>
        <h1>{title}</h1>
        <p>{description}</p>
    </div>
    <div class="imgBox">
        <img src={img} alt="">
    </div>
</div>	

<style>
    .imgBox{
        border-radius: 20px;
        background: linear-gradient(270deg, #ff00ff, #ff69b4, #ff1493, #ff00ff);
        padding: 1em;
        
    }
</style>